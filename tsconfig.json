{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noEmitOnError": true
  },
  "lib": ["ESNext"],
  "ts-node": {
    "esm": true
  },
  "include": ["./config", "./source"],
  "exclude": ["**/*test.ts"]
}
